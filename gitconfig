[user]
    name = Valentin Fadeev

[core]
    editor = vim
    autocrlf = false
    safecrlf = true
    excludesfile = .gitexcludes

[color]
    ui = 1

[merge]
    tool = opendiff

[branch]
    autosetupmerge = true
    autosetuprebase = always

[push]
    default = upstream

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[alias]
    co = checkout
    ci = commit
    st = status
    sts = status --short
    dc = diff --cached
    br = branch
    cp = cherry-pick
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    clean-all = clean -f -d -x
    clean-all-dry-run = clean -f -d -n -x
    branches = !legit branches
    publish = !legit publish
    unpublish = !legit unpublish
    sync = !legit sync
    switch = !legit switch
    resync = !legit resync
    undo = !legit undo

[rerere]
    enabled = 1

[credential]
    helper = osxkeychain
